<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyFirstMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyFirstMauiApp"
    Title="MyFirstMauiApp">

    <ShellContent
        Title="Native / XAML"
        ContentTemplate="{DataTemplate local:NativePage}"
        Route="native" />

    <ShellContent
        Title="Hybrid"
        ContentTemplate="{DataTemplate local:HybridPage}"
        Route="hybrid" />

    <ShellContent
        Title="WOW Factor"
        ContentTemplate="{DataTemplate local:WowPage}"
        Route="wow" />

</Shell>
